<Window x:Class="GraphTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"  Margin="4">
            <Button x:Name="BTNGenerateGraphColumn" Content="Generate Column" HorizontalAlignment="Left" VerticalAlignment="Center" Click="BTNGenerateGraph_Click"/>
            <Button x:Name="BTNGenerateGraphLinear" Content="Generate Line" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0" Click="BTNGenerateGraphLinear_Click"/>
        </StackPanel>
        <Image x:Name="GraphImage" Grid.Row="1"/>
    </Grid>
</Window>